#!/usr/bin/env python

import tkinter as tk

class Application(tk.Frame):
    def __init__(self,master=None):
        tk.Frame.__init__(self,master)
        self.grid(sticky=tk.N+tk.S+tk.E+tk.W)
        self.createWidgets()
        self.showWidgetsPos()

    def createWidgets(self):
        top = self.winfo_toplevel()
        top.rowconfigure(0,weight=1)
        top.columnconfigure(0,weight=1)
        self.rowconfigure(0,weight=1)
        self.columnconfigure(0,weight=1)
        self.texto = tk.StringVar()
        self.texto.set('O')
        self.quitButton = tk.Button(self,textvariable=self.texto)
        self.quitButton.grid(row=0,column=0,sticky=tk.N+tk.S+tk.E+tk.W)
        self.quitButton.bind('<Button-1>',self.ClickHandler)
        self.quitButton.bind('<ButtonRelease-1>',self.ClickHandler)

    def showWidgetsPos(self):
        print(self.grid_bbox())
        print(self.quitButton.grid_bbox())

    def ClickHandler(self,event):
        if event.type == "4":
            self.texto.set('X')
        elif event.type == "5":
            self.texto.set('O')
        print(event.type)
        


app = Application()
app.master.title('Emulador de Semafaro')
app.mainloop()
