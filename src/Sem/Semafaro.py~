
"""
Este Codigo No funciona con Linux
"""

from termcolor import *;
import colorama;
from time import sleep;
colorama.init();

class Semafaro(object):
    def __init__(self,DurTotal=120,Semafaros):
        self.Ss = Semafaros
        self.DURACION_TOTAL = DurTotal

    def CambiarSemafaro(self,sem,offset):
        if(sem <= 0):
            sem = offset;
        else:
            sem = sem - 1;
            return sem;

    def Imprimir(self,S):
        if(S < 30):
            cprint(S,"green");
        else:
            cprint(S,"red");

    def IniciarEmulacion(self,parar):
        while (not kbhit()):
            for i in range(len(Ss)):
                Ss[i] = CambiarSemafaro(Ss[i],DURACION_TOTAL);
            sleep(0.10);
